<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_background_gen"
    tools:context=".actividades.comprador.CrearOrdenActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Total"
        app:layout_constraintBottom_toTopOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintEnd_toStartOf="@+id/txt_total_comidas_crear_orden"
        app:layout_constraintTop_toTopOf="@+id/txt_total_comidas_crear_orden"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Crear Orden"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_ubicacion_crear_orden"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_total_comidas_crear_orden"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_total_comidas_crear_orden"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_comidas_crear_orden" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="Ubicacion"
        app:layout_constraintBottom_toBottomOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintEnd_toStartOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintTop_toTopOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintVertical_bias="0.631" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="Costo Delivery"
        app:layout_constraintBottom_toBottomOf="@+id/txt_costo_delivery_crear_orden"
        app:layout_constraintEnd_toStartOf="@+id/txt_costo_delivery_crear_orden"
        app:layout_constraintTop_toTopOf="@+id/txt_costo_delivery_crear_orden" />

    <EditText
        android:id="@+id/txt_costo_delivery_crear_orden"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintStart_toStartOf="@+id/txt_ubicacion_crear_orden"
        app:layout_constraintTop_toBottomOf="@+id/txt_ubicacion_crear_orden" />

    <EditText
        android:id="@+id/txt_fecha_entrega_crear_orden"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_costo_delivery_crear_orden"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txt_costo_delivery_crear_orden"
        app:layout_constraintTop_toBottomOf="@+id/txt_costo_delivery_crear_orden" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Fecha de \Entrega"
        app:layout_constraintBottom_toBottomOf="@+id/txt_fecha_entrega_crear_orden"
        app:layout_constraintEnd_toStartOf="@+id/txt_fecha_entrega_crear_orden"
        app:layout_constraintTop_toTopOf="@+id/txt_fecha_entrega_crear_orden" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Costo de Entrega"
        app:layout_constraintBottom_toBottomOf="@+id/txt_costo_entrega_crear_orden"
        app:layout_constraintEnd_toStartOf="@+id/txt_costo_entrega_crear_orden"
        app:layout_constraintTop_toTopOf="@+id/txt_costo_entrega_crear_orden" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_escogidos_comprador"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_costo_entrega_crear_orden"
        app:layout_constraintVertical_bias="0.194" />

    <EditText
        android:id="@+id/txt_costo_entrega_crear_orden"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_fecha_entrega_crear_orden"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/txt_fecha_entrega_crear_orden" />

    <EditText
        android:id="@+id/txt_total_comidas_crear_orden"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/btn_crear_orden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_escogidos_comprador"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>